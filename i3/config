# xprop example: WM_CLASS(STRING) = "rhythmbox", "Rhythmbox" "string","Class"
assign [class="Vivaldi-stable"] 1
assign [class="Google-chrome"] 2
assign [class="Rhythmbox"] 10
#place rhythmbox on window 10 on open

# Press $mod+o followed by either f, t, Esc or Return to launch firefox,
# thunderbird or return to the default mode, respectively.
set $mode_launcher Launch: [c]alc [e]clipse [f]irefox [g]oogle-chrome [n]autilus [r]hythmbox [v]ivaldi vo[l]ume
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym c exec gnome-calculator
    bindsym e exec /home/io/eclipse/java-neon/eclipse/eclipse
    bindsym f exec firefox
    bindsym g exec google-chrome
    bindsym l exec pavucontrol
    bindsym n exec nautilus
    bindsym r exec rhythmbox
    bindsym v exec vivaldi
#    bindsym Scroll_Lock exec systemctl suspend

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

# 4.28. Focus on window activation: smart|urgent|focus|none
focus_on_window_activation urgent

bindsym $mod+Scroll_Lock exec i3lock -f -c 1a0000 && systemctl suspend
#lock machine before suspending
bindsym $mod+Ctrl+Scroll_Lock exec systemctl suspend
#suspend without lock

#lock machine
bindsym $mod+Pause exec i3lock -f -c 1a0000

bindsym Print exec gnome-screenshot -i #screenshot dialog via the same dialog as Ubuntu.

# Pulse Audio controls
# bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5% #increase sound volume
# bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5% #decrease sound volume
# bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle # mute sound
bindsym $mod+F12 exec pactl set-sink-volume 1 +5% #increase sound volume
bindsym $mod+F11 exec pactl set-sink-volume 1 -5% #decrease sound volume
bindsym $mod+Ctrl+F12 exec pactl set-sink-volume 1 100% # volume 100% #helps me not go above 100%
bindsym $mod+F10 exec pactl set-sink-mute 1 toggle # mute sound

